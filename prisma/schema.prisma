
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Generate the JavaScript client
generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  RECRUITER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String?
  googleId  String?
  role      Role     @default(USER)

  resumes      Resume[]
  jobs         Job[]         @relation("RecruiterJobs")
  applications Application[]

  createdAt DateTime @default(now())
}

model Resume {
  id        Int    @id @default(autoincrement())
  title     String
  content   Json

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Job {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  company     String

  recruiterId Int
  recruiter   User @relation("RecruiterJobs", fields: [recruiterId], references: [id])

  applications Application[]

  createdAt DateTime @default(now())
}

model Application {
  id     Int    @id @default(autoincrement())
  status String @default("APPLIED")

  userId Int
  jobId  Int

  user User @relation(fields: [userId], references: [id])
  job  Job  @relation(fields: [jobId], references: [id])

  createdAt DateTime @default(now())
}

model Chat {
  id         Int    @id @default(autoincrement())
  senderId   Int
  receiverId Int
  message    String

  createdAt DateTime @default(now())
}